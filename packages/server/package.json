{
  "name": "@surgioproject/gateway-server",
  "license": "MIT",
  "version": "0.0.1",
  "repository": "https://github.com/surgioproject/gateway",
  "author": "Yihang Li <me@royli.dev>",
  "bugs": {
    "url": "https://github.com/surgioproject/gateway/issues"
  },
  "homepage": "https://surgio.royli.dev",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "run-s build:*",
    "build:server": "nest build",
    "start": "nest start",
    "start:prod": "node dist/main",
    "dev": "nest start --watch",
    "debug": "nest start --debug --watch",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register jest --runInBand",
    "test:e2e": "jest --config test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^6.8.0",
    "@nestjs/core": "^6.8.0",
    "@nestjs/platform-fastify": "^6.10.14",
    "got": "^10.2.1",
    "http-errors": "^1.7.3",
    "lodash": "^4.17.15",
    "nunjucks": "^3.2.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.0",
    "rxjs": "^6.5.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^6.9.1",
    "@nestjs/schematics": "^6.7.0",
    "@nestjs/testing": "^6.8.0",
    "@now/node": "^1.3.1",
    "@types/jest": "^24.0.18",
    "@types/node": "^10",
    "@types/nunjucks": "^3.1.3",
    "@types/supertest": "^2.0.8",
    "jest": "^24.9.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.0",
    "supertest": "^4.0.2",
    "ts-jest": "^24.1.0",
    "ts-loader": "^6.2.0",
    "ts-node": "^8.4.1",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^5.20.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-immutable": "^6.0.1",
    "type-fest": "^0.8.1",
    "typescript": "^3.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "peerDependencies": {
    "surgio": "^1.11.3"
  }
}
