  "bugs": {
    "url": "https://github.com/surgioproject/packages/issues"
  },
  "homepage": "https://surgio.royli.dev",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "prepare": "run-s build",
    "start": "nest start",
    "start:prod": "node dist/main",
    "dev": "nest start --watch",
    "debug": "nest start --debug --watch",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register jest --runInBand",
    "test:e2e": "jest --config __tests__/jest-e2e.json",
    "test:ci": "run-s test test:e2e"
  },
  "dependencies": {
    "@nestjs/common": "^6.8.0",
    "@nestjs/config": "^0.2.4",
    "@nestjs/core": "^6.8.0",
    "@nestjs/passport": "^6.1.1",
    "@nestjs/platform-fastify": "^6.10.14",
    "@nestjs/serve-static": "^2.0.0",
    "@surgio/gateway-frontend": "file:../gateway-frontend",
    "cookie-signature": "^1.1.0",
    "fastify": "^2.12.0",
    "fastify-cookie": "^3.5.0",
    "fastify-static": "^2.6.0",
    "got": "^10.2.1",
    "http-errors": "^1.7.3",
    "lodash": "^4.17.15",
    "nunjucks": "^3.2.0",
    "passport": "^0.4.1",
    "passport-cookie": "^1.0.6",
    "passport-http-bearer": "^1.0.1",
    "pino-pretty": "^3.5.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.0",
    "rxjs": "^6.5.3",
    "semver": "^7.1.3"
  },
  "files": [
    "dist"
  ],
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "setupFiles": [
      "../__tests__/setup-tests.ts"
    ]
  },
  "peerDependencies": {
    "surgio": "^1.13.0"
  },
  "publishConfig": {
    "access": "public"
  },
